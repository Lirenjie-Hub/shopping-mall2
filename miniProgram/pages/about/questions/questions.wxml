<!--pages/about/questions.wxml-->
<text>pages/about/questions.wxml</text>
<view class="page-body">
  <view class="btn-area" id="buttonContainer">
  <text>\n\n\n</text>
    <view class="button-sp-area">
      <button type="default" type="primary">-常见问题-</button> 
      <button type="default"  plain="true">关于快递</button>
      <button type="default"  plain="true">关于色差</button>
      <button type="default"  plain="true">关于质量</button>
      <button type="default"  plain="true">关于退还</button>  
      <button type="default"  plain="true">关于运费险</button>
      <button type="default"  plain="true">关于送达时间</button>

    <view style="border: 1px solid #FFA6A6; border-radius: 2px;">
     <textarea placeholder-class="place-holder"  placeholder="如果上述问题没有帮到您，请详细输入您所要询问的信息，我们将会在三个工作日内于您私信答复。 " name="introduction" maxlength='100' bindinput='limit' value="{{text}}" style="font-size: 15px;"/>

      <!-- 显示字数 -->
      <view class="clear"><text style="color: #ccc; font-size: 14px; float: right; margin-right: 8%;">（最多可写300字）</text></view>
</view> 
      <text>  \n</text>

      
      
      <button class="mini-btn" type="primary" size="mini">继续</button>
    
     
      
    <button class="mini-btn" type="warn" size="mini">返回</button>
    </view>
  </view>
</view>
